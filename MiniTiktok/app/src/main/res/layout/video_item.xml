<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/video_image"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_launcher_foreground"
        />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_delete"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/author_name_"
        android:textColor="#1e1e1e"
        android:textSize="18sp"
        tools:text="student_id" />

    <TextView
        android:id="@+id/author_name_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_delete"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/video_image"
        android:textColor="#1e1e1e"
        android:textSize="18sp"
        tools:text="author:" />

    <TextView
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_name"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="13dp"
        android:textColor="#808080"
        android:textSize="14sp"
        tools:text="2019-01-29" />

    <ImageButton
        android:id="@id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_close_gray_24dp" />

</RelativeLayout>